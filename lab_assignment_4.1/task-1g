def validate_indian_mobile_number(mobile_number: str) -> bool:
    return (
        len(mobile_number) == 10 and
        mobile_number.isdigit() and
        mobile_number[0] in {'6', '7', '8', '9'}
    )

# Example usage: input from user
mobile_number = input("Enter your mobile number: ")
if validate_indian_mobile_number(mobile_number):
    print("Valid Indian mobile number.")
else:
    print("Invalid mobile number.")